    <script>
        // é¡µé¢åˆ‡æ¢åŠŸèƒ½
        function showPage(pageId) {
            // éšè—æ‰€æœ‰é¡µé¢
            document.getElementById('page1').style.display = 'none';
            document.getElementById('page2').style.display = 'none';
            document.getElementById('page3').style.display = 'none';
            
            // æ˜¾ç¤ºå½“å‰é¡µé¢
            document.getElementById(pageId).style.display = 'block';
            
            // æ›´æ–°URLå“ˆå¸Œ
            window.location.hash = pageId;
            
            // æ»šåŠ¨åˆ°é¡µé¢é¡¶éƒ¨
            window.scrollTo(0, 0);
        }
        
        // æ ¹æ®URLå“ˆå¸Œæ˜¾ç¤ºå¯¹åº”é¡µé¢
        function showPageFromHash() {
            const hash = window.location.hash;
            if (hash === '#page2') {
                showPage('page2');
            } else if (hash === '#page3') {
                showPage('page3');
            } else {
                showPage('page1');
            }
        }
        
        // åˆå§‹åŒ–é¡µé¢æ˜¾ç¤º
        window.onload = function() {
            showPageFromHash();
            
            // åˆå§‹åŒ–è½®æ’­å›¾
            initCarousel();
            
            // ä¸ºæ‰€æœ‰åŒºåŸŸå¡ç‰‡æ·»åŠ ç‚¹å‡»äº‹ä»¶
            document.querySelectorAll('.region-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    if (this.getAttribute('href') === '#page2') {
                        e.preventDefault();
                        showPage('page2');
                    }
                });
            });
            
            // ä¸ºé€‰æ‹©æŒ‰é’®æ·»åŠ ç‚¹å‡»äº‹ä»¶
            document.querySelectorAll('.choice-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    if (this.getAttribute('href') === '#page3') {
                        e.preventDefault();
                        showPage('page3');
                    }
                });
            });
            
            // ä¸ºå¯¼èˆªæŒ‰é’®æ·»åŠ ç‚¹å‡»äº‹ä»¶
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    const target = this.getAttribute('href');
                    if (target.startsWith('#')) {
                        e.preventDefault();
                        showPage(target.substring(1));
                    }
                });
            });
        };
        
        // ç›‘å¬URLå“ˆå¸Œå˜åŒ–
        window.addEventListener('hashchange', showPageFromHash);
        
        // è½®æ’­å›¾åŠŸèƒ½ï¼ˆä¿ç•™åŸæœ‰åŠŸèƒ½ï¼‰
        let currentSlide = 0;
        const slides = document.querySelectorAll('.carousel-item');
        const indicators = document.querySelectorAll('.carousel-indicator');
        const totalSlides = slides.length;
        let autoPlayInterval;

        function initCarousel() {
            // å¦‚æœå½“å‰é¡µé¢æ²¡æœ‰è½®æ’­å›¾ï¼Œåˆ™é€€å‡º
            const carousel = document.querySelector('.carousel');
            if (!carousel) return;
            
            // æ˜¾ç¤ºæŒ‡å®šå¹»ç¯ç‰‡
            function showSlide(index) {
                // éšè—æ‰€æœ‰å¹»ç¯ç‰‡
                slides.forEach(slide => slide.classList.remove('active'));
                indicators.forEach(indicator => indicator.classList.remove('active'));
                
                // æ˜¾ç¤ºå½“å‰å¹»ç¯ç‰‡
                slides[index].classList.add('active');
                indicators[index].classList.add('active');
                
                currentSlide = index;
            }

            // ä¸‹ä¸€å¼ å¹»ç¯ç‰‡
            window.nextSlide = function() {
                let nextIndex = (currentSlide + 1) % totalSlides;
                showSlide(nextIndex);
                resetAutoPlay();
            }

            // ä¸Šä¸€å¼ å¹»ç¯ç‰‡
            window.prevSlide = function() {
                let prevIndex = (currentSlide - 1 + totalSlides) % totalSlides;
                showSlide(prevIndex);
                resetAutoPlay();
            }

            // è·³è½¬åˆ°æŒ‡å®šå¹»ç¯ç‰‡
            window.goToSlide = function(index) {
                showSlide(index);
                resetAutoPlay();
            }

            // è‡ªåŠ¨æ’­æ”¾
            function startAutoPlay() {
                autoPlayInterval = setInterval(nextSlide, 4000); // æ¯4ç§’åˆ‡æ¢ä¸€æ¬¡
            }

            // é‡ç½®è‡ªåŠ¨æ’­æ”¾
            function resetAutoPlay() {
                clearInterval(autoPlayInterval);
                startAutoPlay();
            }

            // åˆå§‹åŒ–è‡ªåŠ¨æ’­æ”¾
            startAutoPlay();

            // é¼ æ ‡æ‚¬åœæ—¶æš‚åœè‡ªåŠ¨æ’­æ”¾
            carousel.addEventListener('mouseenter', () => {
                clearInterval(autoPlayInterval);
            });

            carousel.addEventListener('mouseleave', () => {
                startAutoPlay();
            });

            // è§¦æ‘¸è®¾å¤‡æ”¯æŒ
            let startX = 0;
            let endX = 0;

            carousel.addEventListener('touchstart', (e) => {
                startX = e.touches[0].clientX;
            });

            carousel.addEventListener('touchend', (e) => {
                endX = e.changedTouches[0].clientX;
                handleSwipe();
            });

            function handleSwipe() {
                const swipeThreshold = 50;
                const diff = startX - endX;

                if (Math.abs(diff) > swipeThreshold) {
                    if (diff > 0) {
                        nextSlide(); // å‘å·¦æ»‘åŠ¨
                    } else {
                        prevSlide(); // å‘å³æ»‘åŠ¨
                    }
                }
            }
        }
    </script>
